package meeting14;

public class Circle extends Shape2D {
	
	private double radius;
	
	public Circle(int posX, int posY, double rad) {
		super(posX, posY);
		radius = rad;
	}
	
	public double area() {
		return Math.PI * radius * radius;
	}
	
	public double perimeter() {
		return Math.PI * radius * 2;
	}
	
	public void draw() {
		
	}

}
